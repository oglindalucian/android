<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="left">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/pizza"
        android:layout_weight="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de Pizza: "
        android:layout_marginBottom="30dp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        >
        <Button
            android:id="@+id/button_plus"
            android:layout_height="wrap_content"
            android:layout_width="40dp"
            android:text="+"
            android:onClick="ajouter"/>


        <TextView
            android:id="@+id/quantite_text_view"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="center"
            />

        <Button
            android:id="@+id/button_moins"
            android:layout_height="wrap_content"
            android:layout_width="40dp"
            android:text="-"
            android:onClick="retirer"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prix: "

        />

    <TextView
        android:id="@+id/prixFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#b0e0e6"
        />

    <Button
        android:id="@+id/button_commander"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="COMMANDER"
        android:layout_marginBottom="30dp"
        android:onClick="envoyerCommande"
        />

    <Button
        android:id="@+id/button_ingredients"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="INGREDIENTS"
        android:layout_marginBottom="30dp"
        android:onClick="specifierIngredient"
        />
    <Button
        android:id="@+id/button_telephoner"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="telephonner"
        android:layout_marginBottom="30dp"
        android:onClick="telephonnerNb"
        />


</LinearLayout>

