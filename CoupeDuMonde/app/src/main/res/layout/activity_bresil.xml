<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/allemagne_imageView"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/bresil"
        tools:text="Drapeau"
        />

    <TextView
        android:id="@+id/nomPays_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/allemagne_imageView"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:text="Brésil"
        android:textAllCaps="true"
        android:textColor="#3F51B5"

        />
    <TextView
        android:id="@+id/nomCapitale_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomPays_textView"
        android:layout_toRightOf="@id/allemagne_imageView"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:text="Brésil"
        android:textAllCaps="true"
        />

    <TextView
        android:id="@+id/description_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/allemagne_imageView"
        android:textSize="20sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:text="Le Brésil est qualifié pour la Coupe du Monde de la FIFA, Russie 2018. Le pays hôte de l'édition 2014 est le premier à avoir décroché son billet sur le terrain, et rejoint la Russie, première nation qualifiée en tant que pays hôte."
        />

    <LinearLayout
        android:id="@+id/class1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_textView"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="2"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Position au classement FIFA"
            android:layout_weight="2"
            android:singleLine="false"
            android:maxLines="3"
            android:lines="3"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/class2"
        android:layout_below="@id/class1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="5"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Titres"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/class3"
        android:layout_below="@id/class2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="20"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Matches"
            android:layout_weight="2"/>
    </LinearLayout>

</RelativeLayout>
